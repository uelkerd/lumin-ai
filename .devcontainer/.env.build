# Build-time environment variables for Docker
# These are used specifically during the build process

# BuildKit configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
BUILDKIT_PROGRESS=plain

# Use Docker Buildx Bake for better performance
COMPOSE_BAKE=true

# Build caching/optimization
BUILDX_EXPERIMENTAL=1
BUILDKIT_INLINE_CACHE=1

# Build CPU/memory constraints (optional)
DOCKER_BUILD_MEMORY=4g
DOCKER_BUILD_CPUS=2.0

# Other build-specific variables
BUILDKIT_STEP_LOG_MAX_SIZE=10485760
BUILDKIT_STEP_LOG_MAX_SPEED=10485760
