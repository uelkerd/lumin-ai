# LUMIN.AI Development Environment Variables - EXAMPLE FILE
# -------------------------------------------
# SECURITY NOTICE: For development use only. Never commit the actual .env file.
# Copy this file as '.env' and modify values as needed.
# In production, use a secure secrets management solution instead.

# MongoDB Configuration
MONGO_USERNAME=lumin
MONGO_PASSWORD=your_secure_password_here
MONGO_DB_NAME=governance_analysis

# Development Server Ports (must match docker-compose.yml and devcontainer.json)
DEV_SERVER_PORT=3000
API_SERVER_PORT=8000
JUPYTER_PORT=9000
MONGODB_PORT=27017

# Build Optimization (set to 'true' for faster builds)
COMPOSE_DOCKER_CLI_BUILD=1
DOCKER_BUILDKIT=1
COMPOSE_BAKE=true

# Container Resource Limits
CONTAINER_MEMORY=4g
CONTAINER_CPUS=2

# Debug and Logging
DEBUG_MODE=true
LOG_LEVEL=debug
