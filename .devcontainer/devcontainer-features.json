{
    "name": "LUMIN.AI Governance Analysis (Features-based)",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",

    "features": {
      "ghcr.io/devcontainers/features/node:1": {
        "version": "18"
      },

      "ghcr.io/devcontainers/features/git:1": {},

      "ghcr.io/devcontainers/features/github-cli:1": {},

      "ghcr.io/devcontainers/features/common-utils:2": {
        "installZsh": true,
        "configureZshAsDefaultShell": true,
        "username": "lumin-dev",
        "userUid": "1000",
        "userGid": "1000"
      },

      "ghcr.io/devcontainers/features/docker-in-docker:2": {
        "version": "latest",
        "enableNonRootDocker": "true"
      }
    },

    "dockerFile": "Dockerfile.minimal",

    "dockerComposeFile": "docker-compose.yml",
    "service": "lumin-dev-environment",
    "workspaceFolder": "/workspace",

    "postCreateCommand": "pip install -r .devcontainer/requirements-combined.txt && bash .devcontainer/setup-minimal.sh",

    "forwardPorts": [3000, 8000, 8888, 5432],

    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance",
          "ms-toolsai.jupyter",
          "ms-vscode.vscode-typescript-next",
          "esbenp.prettier-vscode"
        ]
      }
    }
  }
